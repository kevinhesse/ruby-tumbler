<form action='/sign-in' method="POST">
<div class="container">
  <div class="form-group">
    <label for="signin-username">User name</label>
    <input type="text" class="form-control" name="username" id="username" aria-describedby="signin-username" placeholder="Enter username">
    <small id="username-message" class="form-text text-muted">We'll never share your information with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="signin-password">Password</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>